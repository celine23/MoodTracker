<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/relativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lin.celine.moodtracker.controller.MainActivity">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </FrameLayout>
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_sage">
        <ImageView
            android:id="@+id/super_happy"
            android:clickable="true"
            android:background="@color/light_sage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/super_happy"/>
        <ImageButton
            android:id="@+id/addnote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="@color/light_sage"
            android:src="@drawable/note_add_black"/>
        <ImageButton
            android:id="@+id/history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@color/light_sage"
            android:src="@drawable/history_black"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/banana_yellow">
        <ImageView
            android:background="@color/banana_yellow"
            android:id="@+id/happy"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/happy"/>
        <ImageButton
            android:id="@+id/addnote1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="@color/banana_yellow"
            android:src="@drawable/note_add_black"/>
        <ImageButton
            android:id="@+id/history1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@color/banana_yellow"
            android:src="@drawable/history_black"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/warm_grey"
        android:layout_below="@+id/relative1">
        <ImageView
            android:id="@+id/normal"
            android:clickable="true"
            android:background="@color/warm_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/smiley_normal"/>
        <ImageButton
            android:id="@+id/addnote2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="@color/warm_grey"
            android:src="@drawable/note_add_black"/>
        <ImageButton
            android:id="@+id/history2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@color/warm_grey"
            android:src="@drawable/history_black"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cornflower_blue_65"
        android:layout_below="@+id/relative2">
        <ImageView
            android:id="@+id/disappointed"
            android:clickable="true"
            android:background="@color/cornflower_blue_65"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/smiley_disappointed"/>
        <ImageButton
            android:id="@+id/addnote3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="@color/cornflower_blue_65"
            android:src="@drawable/note_add_black"/>
        <ImageButton
            android:id="@+id/history3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@color/cornflower_blue_65"
            android:src="@drawable/history_black"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/faded_red"
        android:layout_below="@+id/relative3">
        <ImageView
            android:id="@+id/sad"
            android:background="@color/faded_red"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/smiley_sad"/>
        <ImageButton
            android:id="@+id/addnote4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="@color/faded_red"
            android:src="@drawable/note_add_black"/>
        <ImageButton
            android:id="@+id/history4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@color/faded_red"
            android:src="@drawable/history_black"/>
    </RelativeLayout>

</RelativeLayout>